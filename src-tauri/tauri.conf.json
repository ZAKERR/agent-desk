{
  "$schema": "https://raw.githubusercontent.com/nicegui/tauri/refs/tags/tauri-v2.0.0/crates/tauri-utils/schema.json",
  "productName": "Agent Desk",
  "version": "0.1.0",
  "identifier": "com.agent-desk.app",
  "build": {
    "frontendDist": "../src",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "island",
        "url": "pet.html",
        "width": 300,
        "height": 36,
        "decorations": false,
        "transparent": false,
        "shadow": false,
        "alwaysOnTop": true,
        "resizable": false,
        "skipTaskbar": true,
        "visible": true
      }
    ],
    "trayIcon": null
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    },
    "resources": {
      "binaries/agent-desk-hook.exe": "agent-desk-hook.exe"
    }
  }
}
